<!-- 
    ===============================================================================

        Build script for the CAL Platform project.
        
    ===============================================================================
-->
<project name="CAL_Platform" default="main" basedir=".">

    <!-- 
        Load imports (during parse).
    -->
    <import file="./build-Eclipse-common.xml" />
    <import file="./build-common.xml" />


    <!--
        Overridden Build target
     -->
    <target name="Build" depends="init,updateManifest,build-common.Build"/>


    <!--
        Initialization target 
          - setup directory names etc.
     -->
    <target name="init" depends="build-common.init,build-Eclipse-common.init">
        <property name="project" value="CAL_Platform"/>
        <property name="project.simplename" value="calPlatform"/>
        <property name="project.classes.dest"         value="${java.build.dir}/${project.simplename}/classes"/>
        <property name="project.testclasses.dest"     value="${java.build.dir}/${project.simplename}/testclasses"/>

        <property name="project.dir" value="${src.dir}/Quark_Platform/${project}"/>
        <property name="src.project.dir" value="${project.dir}/src"/>
        <property name="test.project.dir" value="${project.dir}/test"/>

        <property name="plugin.name" value="" />

        <property name="junit.testclass" value="org.openquark.cal.CALPlatformBasicTestSuite"/>

        <patternset id="import.buildpath">
            <include name="${antlr.jar}" />
            <include name="${asm-all.jar}" />
            <include name="${commons-collections.jar}" />
            <include name="${guava.jar}" />
        </patternset>

    </target>

</project>
